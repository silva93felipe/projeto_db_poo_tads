package persistencia;

import java.sql.Connection;
import java.sql.DriverManager;

public class Conexao {
	
	private String usuario;
	private String senha;
	private String caminho;
	private Connection con;
	
	public Conexao() {
		this.caminho = "";
		this.usuario = "postgres";
		this.senha = "postgres";
	}
	
	public void conectar(String caminho, String usuario, String senha) {
		try {
			Class.forName("org.postgresql.Driver"); //Carregar o driver
			this.con = DriverManager.getConnection(caminho, usuario, senha); //cria a conexao com os dados
			System.out.println("Conexao realizada com sucesso...");
			
		}catch(Exception e) {
			System.out.print("Erro na conexao: " + e.getMessage());
		}
	}
	
	// Comandos => INSERT, UPDATE e DELETE nao tem retorno (EXECUTE())
	// Comando => SELECT (EXECUTEQUERY)
	// Cada um vai para a TABELA DAO que esteja se referido. Consulta CLIENTE na tabela CLIENTEDAO
}
